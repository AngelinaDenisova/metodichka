//составить таблицу значений функции f(x)=1+x+x^2/2!.....
#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;
double func(double x, double e, int& n) {
    double s = 0, k = 1, znam = 1, chis = 1;
    while (abs(k) >= e) {
        s += k;
        znam = znam * (znam + 1);
        chis = chis * x;
        k += chis / znam;
        n++;
    }
    return s;
}
int main() {
    double a, b, e, f, h, x;
    cin >> a >> b >> h >> e;
    int i, n=0;
    cout << setprecision(3);
    cout << "i\t x\t f(x) \t n\n";
    for (x = a, i = 1; x <= b; x += h, i++) {
        f = func(x, e, n);
        cout << i << "\t" << x << "\t" << f << "\t" << n << endl;
    }
    return 0;
}
