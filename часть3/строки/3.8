#include <iostream>
#include <string>
using namespace std;
int main()
{
    string str, slovo;
    int s = 0;
    string::size_type k = 0, pos = 0;
    cout << "Vvedite stroky" << endl;
    getline(cin, str);
    str = str + ' ';
    k = str.find(" ", pos);
    while (k != string::npos) {
        slovo = str.substr(pos, k - pos);
        if (slovo[0] == slovo[slovo.length() - 1])
            cout << slovo << " ";
        pos = k + 1;
        k = str.find(" ", pos);
    }
    return 0;
}
