//цикл do while

#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	double x;
	double k = 5.0;
	cout << "Введите курс рубля" << endl;
	cin >> x;
	do {
		cout << int(k) << " долларов = " << fixed << setprecision(4) << k * x << " рублей" << endl;
		k = k + 5;
	} while (k <= 120);
	return 0;
}

