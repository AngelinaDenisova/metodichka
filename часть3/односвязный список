//Создать список из целых чисел, удалить лишние элементы так, чтобы в результирующем каждый элемент был не меньше среднего арифметического всех элементов, 
//следующих за ним
#include <fstream>
#include <iostream>
using namespace std;
ifstream in("input.txt");
ofstream out("output.txt");
//структура узла списка
struct Node {
    int data; //данные
    Node* next; //указатель на следующий узел
};
//функция добавления нового узла в начало списка
void add_node(Node** head, int data) {
    Node* new_node = new Node; //указатель на новый узел
    new_node->data = data; //в поле data записываем переданное значение
    new_node->next = (*head); //в поле next записываем указатель на текущую голову
    (*head) = new_node; //обновляем head, который теперь указывает на новую голову списка
}
//удаление узлов, содержащих значения меньше среднего арифметического
void delete_nodes(Node** head, int avg) {
    Node* current = (*head); //устанавливаем указатель с голову списка
    Node* prev = NULL; //этот указатель в NULL
//начиная с головы списка, удаляем все узлы, меньше avg
    while (current != NULL && current->data < avg) {
        (*head) = current->next; //меняем текущий указатель на следующий
        delete current; //удаляем текущий узел
        current = (*head); //перемещаем указатель на новую голову
    }
//проходим по оставшимся узлами списка, меньшим avg и удаляем их
    while (current != NULL) {
        if (current->data < avg) { // если значение текущего узла меньше
            prev->next = current->next; // prev в предыдущего узла смещается на следующий, после текущего 
            delete current; //текущий узел удаляется
            current = prev->next; // current переустанавливается на место, после удаленного
        }
        else {
            prev = current; //prev устанавливается на текущий узел
            current = current->next; //current смещается на следующий
        }
    }
}
//печать списка
void print_list(Node* head) {
    while (head != NULL) {
        out << head->data << " ";
        head = head->next;
    }
}

int main() {
    Node* head = NULL;
    int data, sum = 0, count = 0;
    while(in >> data) {
        add_node(&head, data);
        sum += data;
        count++;
    }

    int avg = sum / count;

    out << "Original list: ";
    print_list(head);

    delete_nodes(&head, avg);

    out << "\nModified list: ";
    print_list(head);

    return 0;
} 
