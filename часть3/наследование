// Создать абстрактный класс Transport с функциями, позволяющими вывести на экран информацию о транспортном средстве, а также определить его грузоподъемность
#include <iostream>

using namespace std;

class Transport {
public:
    virtual void getInfo() = 0;
    virtual void getCapacity() = 0;
};

class Car : public Transport {
public:
    void getInfo() {
        cout << "This is a car" << endl;
    }
    void getCapacity() {
        cout << "The capacity of this car is 500 kg" << endl;
    }
};

class Truck : public Transport {
public:
    void getInfo() {
        cout << "This is a truck" << endl;
    }
    void getCapacity() {
        cout << "The capacity of this truck is 5000 kg" << endl;
    }
};

int main() {
    Transport* t1 = new Car();
    t1->getInfo();
    t1->getCapacity();

    Transport* t2 = new Truck();
    t2->getInfo();
    t2->getCapacity();

    return 0;
}
