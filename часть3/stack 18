#include <iostream>
#include <stack>
#include <list>
#include <fstream>
using namespace std;
ifstream in("input.txt");
ofstream out("output.txt");
int main() {
    list<int> lst;
    int data;
    while(in >> data) {
        lst.push_back(data);
    }
    stack<int> stk; // создаем стек для хранения элементов, которые нужно удалить
    int sum = 0; // переменная для хранения суммы элементов
    for (auto it = lst.begin(); it != lst.end(); ++it) { // проходим по всем элементам списка
        sum += *it; // добавляем текущий элемент к сумме
    }
    double avg = sum*1.0/lst.size(); // вычисляем среднее арифметическое
    for (auto it = lst.begin(); it != lst.end(); ++it) { // проходим по всем элементам списка
        auto next_it = next(it); // получаем итератор на следующий элемент
        if (next_it != lst.end() && *next_it < avg) { // если следующий элемент меньше среднего арифметического
            stk.push(*next_it); // добавляем его в стек
            lst.erase(next_it); // удаляем из списка
        }
    }
    out << "Список после удаления лишних элементов: ";
    for (auto it = lst.begin(); it != lst.end(); ++it) { // проходим по всем элементам списка
        out << *it << " "; // выводим элемент на экран
    }
    out << endl;

    out << "Удаленные элементы: ";
    while (!stk.empty()) { // пока стек не пуст
        out << stk.top() << " "; // выводим элемент на экран
        stk.pop(); // удаляем элемент из стека
    }
    out << endl;

    return 0;
}
