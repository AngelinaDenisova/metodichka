//Написать рекурсивную функцию, для вывода картинки
#include <iostream>
#include <string>
using namespace std;
char f(char ch, int &n, int &i) {
    string a(n, ch);
    string b((i/2), ' ');
    cout << b << a << '\n';
    if (ch < 'Z') 
        f(ch+1, n-= 2, i+=2); 
    return ch + 25;
}
void f1(char ch, int n, int i) {
    string a(n, ch);
    string b((i / 2), ' ');
    cout << b << a << '\n';
    if (ch > 'A') 
        f1(ch-1, n+=2, i-= 2);    
}
 
int main(){
    char ch = 'A';
    int n = 80, i = 2;
    ch=f(ch, n, i);
    ch--; n += 2; i -= 2;
    f1(ch, n, i);
    return 0;
}
